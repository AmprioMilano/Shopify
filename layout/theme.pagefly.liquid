            url({{'TTNormsProTrial-Md.ttf' | file_url }}) format('truetype');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'TT Norms Pro Trial';
        src: url({{ 'TTNormsProTrial-DmBd.eot' | file_url }});
