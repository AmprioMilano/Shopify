<style>
.home-slider {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.home-slider .swiper {
  width: 100%;
  height: 100%;
}

.home-slider .swiper-slide {
  position: relative;
  width: 100%;
  height: 100vh;
}

.home-slider .swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.home-slider .slide-link {
  display: block;
  width: 100%;
  height: 100%;
}

.home-slider .slider-content {
  position: absolute;
  bottom: 15%;
  left: 0;
  right: 0;
  color: #fff;
  z-index: 2;
  padding: 0 2rem;
  text-align: left;
  max-width: 90%;
  margin: 0 auto;
}

.home-slider .slider-content::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
  z-index: -1;
}

.home-slider .slider-content .slide-subtitle {
  display: block;
  font-size: 0.875rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin-bottom: 1rem;
  font-weight: 400;
  color: #fff;
}

.home-slider .slider-content .slide-title {
  color: #fff;
  font-size: 3.5rem;
  font-weight: 500;
  margin: 0 0 2rem;
  line-height: 1.2;
  font-family: "Playfair Display", serif;
}

.home-slider .slider-content .cta-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: transparent;
  border: 1px solid #fff;
  color: #fff;
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 400;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.home-slider .slider-content .cta-button:hover {
  background: #fff;
  color: #000;
}

.home-slider .slider-content .cta-button svg {
  width: 18px;
  height: 18px;
  transition: transform 0.3s ease;
}

.home-slider .slider-content .cta-button:hover svg {
  transform: translateX(4px);
}

.swiper-pagination {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}

.swiper-pagination-bullet {
  width: 8px;
  height: 8px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 1;
  margin: 0 4px;
}

.swiper-pagination-bullet-active {
  background: #fff;
}

@media screen and (max-width: 767px) {
  .desk-image {
    display: none;
  }
  
  .home-slider .slider-content {
    bottom: 10%;
  }
  
  .home-slider .slider-content .slide-title {
    font-size: 2.5rem;
  }
}

@media screen and (min-width: 768px) {
  .mob-image {
    display: none;
  }
  
  .home-slider .slider-content {
    padding: 0 4rem;
    max-width: 1200px;
  }
}
</style>

<section id="shopify-section-slider" class="shopify-section slider">
  <div class="home-slider">
    <div class="swiper homeSwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.slide_link }}" class="slide-link">
              {% if block.settings.video %}
                {{ block.settings.video | video_tag: playsinline: true, autoplay: true, loop: true, muted: true, controls: false }}
              {% else %}
                <img 
                  class="desk-image" 
                  src="{{ block.settings.image | img_url: '2000x' }}" 
                  alt="{{ block.settings.slide_title | escape }}" 
                  width="" 
                  height="" 
                  loading="lazy"
                >
                <img 
                  class="mob-image" 
                  src="{{ block.settings.image_mob | img_url: '800x' }}" 
                  alt="{{ block.settings.slide_title | escape }}" 
                  width="" 
                  height="" 
                  loading="lazy"
                >
              {% endif %}
            </a>
            <div class="container slider-content">
              <span class="slide-subtitle">{{ block.settings.subtitle }}</span>
              <h2 class="slide-title">{{ block.settings.slide_title }}</h2>
              <a href="{{ block.settings.slide_link }}" class="cta-button">
                {{ block.settings.cta_text | default: 'DISCOVER MORE' }}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M14.4301 5.92993L20.5001 11.9999L14.4301 18.0699" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M3.5 12H20.33" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  new Swiper('.homeSwiper', {
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    autoplay: {
      delay: 6000,
      disableOnInteraction: false
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    },
    loop: true,
    speed: 1000
  });
});
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "slider",
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "label": "Slide height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to first image"
        },
        {
          "value": "full",
          "label": "Full screen height"
        }
      ],
      "default": "full"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 6
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mob",
          "label": "Mobile Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "HANDMADE EXCELLENCE"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Title",
          "default": "Artisan Home Decor"
        },
        {
          "type": "url",
          "id": "slide_link",
          "label": "Slide Link"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "DISCOVER MORE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}