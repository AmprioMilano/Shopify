<style>
.home-slider {
  width: 100%;
  position: relative;
  overflow: hidden;
  background: #fff;
  height: 75vh;
}

.home-slider .swiper {
  width: 100%;
  height: 100%;
}

.home-slider .swiper-slide {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.home-slider .swiper-slide img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.home-slider .slide-link {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 4rem;
  position: relative;
}

.home-slider .slider-content {
  position: relative;
  color: #fff;
  z-index: 2;
  text-align: left;
  pointer-events: none;
  width: 100%;
  max-width: 500px;
  padding: 2rem 0;
}

.home-slider .slider-content::before {
  content: '';
  position: absolute;
  top: -100%;
  left: -100vw;
  right: -100vw;
  bottom: -100%;
  background: linear-gradient(90deg, 
    rgba(0,0,0,0.4) 0%,
    rgba(0,0,0,0.2) 50%,
    rgba(0,0,0,0) 100%
  );
  z-index: -1;
}

.home-slider .slider-content .slide-subtitle {
  display: block;
  font-size: 0.75rem;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 0.75rem;
  font-weight: 400;
  color: #fff;
  font-family: "TT Norms Pro Trial", sans-serif;
}

.home-slider .slider-content .slide-title {
  color: #fff;
  font-size: 2.75rem;
  font-weight: 500;
  margin: 0 0 1.25rem;
  line-height: 1.1;
  font-family: "Playfair Display", serif;
}

.home-slider .slider-content .cta-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  background: #fff;
  color: #000;
  text-decoration: none;
  font-size: 0.75rem;
  font-weight: 400;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  transition: all 0.3s ease;
  pointer-events: auto;
  font-family: "TT Norms Pro Trial", sans-serif;
}

.home-slider .slider-content .cta-button:hover {
  background: rgba(255, 255, 255, 0.9);
  transform: translateY(-2px);
}

.home-slider .slider-content .cta-button svg {
  width: 16px;
  height: 16px;
  transition: transform 0.3s ease;
}

.home-slider .slider-content .cta-button:hover svg {
  transform: translateX(4px);
}

.swiper-pagination {
  position: absolute;
  bottom: 1.5rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
  display: flex;
  gap: 0.5rem;
}

.swiper-pagination-bullet {
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 1;
  transition: all 0.3s ease;
  cursor: pointer;
}

.swiper-pagination-bullet-active {
  background: #fff;
  transform: scale(1.5);
}

@media screen and (max-width: 767px) {
  .desk-image {
    display: none;
  }
  
  .home-slider {
    height: 60vh;
  }
  
  .container {
    padding: 0 1.5rem;
  }
  
  .home-slider .slider-content {
    max-width: 100%;
    padding: 1.5rem 0;
  }
  
  .home-slider .slider-content .slide-title {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .home-slider .slider-content .slide-subtitle {
    margin-bottom: 0.5rem;
  }

  .home-slider .slider-content .cta-button {
    padding: 0.5rem 1rem;
  }
}

@media screen and (min-width: 768px) {
  .mob-image {
    display: none;
  }
}
</style>

<section id="shopify-section-slider" class="shopify-section slider">
  <div class="home-slider">
    <div class="swiper homeSwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            {% if block.settings.video %}
              {{ block.settings.video | video_tag: playsinline: true, autoplay: true, loop: true, muted: true, controls: false }}
            {% else %}
              <img 
                class="desk-image" 
                src="{{ block.settings.image | img_url: '2000x' }}" 
                alt="{{ block.settings.slide_title | escape }}" 
                width="" 
                height="" 
                loading="lazy"
              >
              <img 
                class="mob-image" 
                src="{{ block.settings.image_mob | img_url: '800x' }}" 
                alt="{{ block.settings.slide_title | escape }}" 
                width="" 
                height="" 
                loading="lazy"
              >
            {% endif %}
            {% if block.settings.collection %}
              <a href="{{ block.settings.collection.url }}" class="slide-link"></a>
            {% endif %}
            <div class="container">
              <div class="slider-content">
                <span class="slide-subtitle">{{ block.settings.subtitle }}</span>
                <h2 class="slide-title">{{ block.settings.slide_title }}</h2>
                {% if block.settings.collection %}
                  <a href="{{ block.settings.collection.url }}" class="cta-button">
                    {{ block.settings.cta_text | default: 'DISCOVER MORE' }}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M14.4301 5.92993L20.5001 11.9999L14.4301 18.0699" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M3.5 12H20.33" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  new Swiper('.homeSwiper', {
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    autoplay: {
      delay: 6000,
      disableOnInteraction: false
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    },
    loop: true,
    speed: 1000
  });
});
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "slider",
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "label": "Slide height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to first image"
        },
        {
          "value": "full",
          "label": "Full screen height"
        }
      ],
      "default": "full"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 6
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mob",
          "label": "Mobile Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "HANDMADE EXCELLENCE"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Title",
          "default": "Artisan Home Decor"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "DISCOVER MORE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}