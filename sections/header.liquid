<script>
document.addEventListener("DOMContentLoaded", function () {
  const left = document.querySelector(".info-banner-left");
  const right = document.querySelector(".info-banner-right");

  if (!left || !right) return;

  let showLeft = true;

  const isMobile = () => window.innerWidth < 750;

  // Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð¿Ð¾ÐºÐ°Ð·Ð° Ð±Ð»Ð¾ÐºÐ°
  function showBlock(el) {
    el.classList.remove("info-banner-hidden");
    el.classList.add("active");
  }

  // Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ ÑÐºÑ€Ñ‹Ñ‚Ð¸Ñ Ð±Ð»Ð¾ÐºÐ°
  function hideBlock(el) {
    el.classList.remove("active");
    el.classList.add("info-banner-hidden");
  }

  // Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð¿ÐµÑ€ÐµÐºÐ»ÑŽÑ‡ÐµÐ½Ð¸Ñ Ð±Ð»Ð¾ÐºÐ¾Ð²
  function toggleBlocks() {
    if (isMobile()) {
      if (showLeft) {
        hideBlock(right);
        showBlock(left);
      } else {
        hideBlock(left);
        showBlock(right);
      }
    } else {
      showBlock(left);
      showBlock(right);
    }
    showLeft = !showLeft;
  }

  // Ð˜Ð·Ð½Ð°Ñ‡Ð°Ð»ÑŒÐ½Ð¾Ðµ ÑÐ¾ÑÑ‚Ð¾ÑÐ½Ð¸Ðµ
  toggleBlocks();

  // ÐŸÐµÑ€ÐµÐºÐ»ÑŽÑ‡ÐµÐ½Ð¸Ðµ Ð±Ð»Ð¾ÐºÐ¾Ð² ÐºÐ°Ð¶Ð´Ñ‹Ðµ 5 ÑÐµÐºÑƒÐ½Ð´
  setInterval(() => {
    if (isMobile()) {
      toggleBlocks();
    }
  }, 5000);

  // ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚ÐºÐ° Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ Ñ€Ð°Ð·Ð¼ÐµÑ€Ð° Ð¾ÐºÐ½Ð°
  window.addEventListener("resize", () => {
    if (!isMobile()) {
      showBlock(left);
      showBlock(right);
    } else {
      toggleBlocks();
    }
  });
});

</script>
