{%- style -%}
    .section-{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
  @media screen and (min-width: 750px){
    .section-{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.content.text-align-center {text-align: center;}
.content.text-align-left {text-align: start;}
.content.text-align-right {text-align: end;}


{%- endstyle -%}

<section class="section-{{ section.id }}-padding section-{{ section.id }}-margin color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width page-width-landing">
       <div class="content ">
         {%- if section.settings.sub_text != blank -%}
           <span>{{ section.settings.sub_text }}</span>
         {%- endif -%}
         <h2>{{ section.settings.inline_richtext }}</h2>
         {%- if section.settings.button_url != blank -%}
         <div class="custom-button">https://shopify.dev/docs/api/liquid/tags/if
           <a class="btn" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
         </div>
         {%- endif -%}
         <div class="form-container-col">
           <div class="col text-col">
             <h4 >{{ section.settings.headingtext }}</h4>
             <p>{{ section.settings.paratext }}</p>
           </div>
           <div class="col form-col">
             <div style="margin:0 auto;" class="pxFormGenerator" id="G0gDnnSoBqOPnApKXSfGQQ"></div>
           </div>
         </div>
       </div>
  
  </div>
</section>

{% schema %}
  {
    "name": "Partnership Form Sec",
    "class": "partnership_form_sec",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      },
      {
        "type": "inline_richtext",
        "id": "inline_richtext",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "sub_text",
        "label": "Sub Text"
      },
       {
        "type": "text",
        "id": "headingtext",
        "label": "Heading Text"
      },
      {
        "type": "inline_richtext",
        "id": "paratext",
        "label": "Para Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Content alignment",
        "options": [
          { "value": "center", "label": "Center" },
          { "value": "left", "label": "Left" },
          { "value": "right", "label": "Right" }
        ],
        "default": "center"
      },
      {
        "type": "header",
        "content": "Padding and Margin"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step":2,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step":2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
      {
        "type": "header",
        "content": "Padding and Margin Mobile"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 200,
        "step":2,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "min": 0,
        "max": 200,
        "step":2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
    ],
     "presets": [
      {
        "name": "Partnership Form Sec"         
     }
   ]
  }
{% endschema %}


